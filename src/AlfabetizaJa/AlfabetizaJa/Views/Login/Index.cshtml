@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AlfabetizaJá</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600;700&family=Roboto&display=swap" rel="stylesheet">
     <link rel="icon" href="/illustration-of-book-icon-free-vector.jpg" type="image/x-icon">
     <link rel="shortcut icon" href="/illustration-of-book-icon-free-vector.jpg" type="image/x-icon">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body style="background-color:#f8efed">
  <section id="login">
        <div class="container" style="border: 3px solid #002060;">
            <form class="form-signin" action="/Login/checarLogin" method="post">
          <!-- <img class="mb-4" src="https://logodownload.org/wp-content/uploads/2019/08/senai-logo-0.png" alt="" width="242" height="242"> -->
                <h1 class="h3 mb-3 font-weight-normal" style="font-family: 'Poppins', sans-serif; color:#002060;font-size:35px;">LOGIN</h1>
                <label for="inputEmail" class="sr-only" id="error" style="display:none; color: red;">Campo Email ou senha incorreto</label>
                <label for="inputEmail" class="sr-only" style="color:#002060;font-family: 'Poppins', sans-serif;">Email address</label>
          <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email" required autofocus="">
          <label for="inputPassword" class="sr-only" style="color:#002060;font-family: 'Poppins', sans-serif;">Password</label>
                <input type="password" id="inputPassword" name="senha" required class="form-control" placeholder="Senha">
                <div style="display: flex;justify-content: center; align-items: center;">
                    <button class="btn btn-lg btn-dark btn-block m-3" type="submit" value="entrar" style="background-color:#FFA500; color:white;border:none;font-family: 'Poppins', sans-serif;">
                        Entrar
                    </button>
                </div>
              
                <label>Não tem conta? <a href="/Login/Cadastro">Criar</a></label>
                          <p class=" mt-2 mb-0 text-muted">© Senai</p>
        </form>
      </div>
  </section>
    @if (TempData["Mensagem"] != null)
    {
        <script>
            document.getElementById('error').style.display = 'block';
        </script>
    }

</body>
</html>

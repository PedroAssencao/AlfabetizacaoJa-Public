<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] AlfabetizaJá</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlfabetizaJa.styles.css" asp-append-version="true" />
    <metmarginet="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AlfabetizaJá</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600;700&family=Roboto&display=swap" rel="stylesheet">
    <link rel="icon" href="/img/illustration-of-book-icon-free-vector.jpg" type="image/x-icon">
    <link rel="shortcut icon" href="/img/illustration-of-book-icon-free-vector.jpg" type="image/x-icon">
    <link rel="stylesheet" href="/css/navbar.css" />
    
    <style>
    body {
        position: relative;
        height: 100vh;
        margin: 0;
        padding: 0;
    }


    footer {
        position: absolute;
        margin: 20vh auto;
        width: 100%;
        background-color: #002060;
        color: #fff;
    }

</style>

</head>

<body style="background-color:#f8efed">

    <header>

        <nav class="navbar navbar-expand-lg p-3" style="background-color: #002060;"> 
           
            <div class="container-fluid">

                  @if (@User.Identity.Name == "1")
                     {
                    <div class="botao">
                        <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                     }
       
                     <a class="navbar-brand" style="color: white; margin-top:10px; font-family: 'Poppins', sans-serif;" aria-current="page" href="~/Home">AlfabetizaJá <img src="~/img/alfabeto.png" style="width:35px; margin-block:0px" />  </a>
            
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                         @if (@User.Identity.Name == "1")
                    {
                        <li> 
                            <a class="nav-brand" style="color: white; margin-top:10px; text-decoration:none; font-size:20px;margin-left:30px " aria-current="page" href="~/Historia">Lista de Historias</a>
                        </li>
                    }
                    </ul>
                </div>
                    <ul class="nav navbar-nav">
                        @if (User.IsInRole("Login"))
                        {
                            <form method="post" action="/Login/Logout" style="flex: 1;">
                                <div>
                                    <button type="submit" class="btn btn-primary btn-lg btn-light logout-button" style="background:white; color:#002060; border-color:#002060;font-family: 'Poppins', sans-serif;">Logout</button>
                                </div>

                            </form>
                        }
                        else
                        {

                            //<li> <a class="nav-brand" style="color: white; margin-top:10px; text-decoration:none; font-size:20px;margin-right:50px " aria-current="page" href="~/Login">Login</a></li>
                            <button class="btn btn-light"><a class="nav-brand" style="color: black; text-decoration: none; font-size: 20px;" href="~/Login">Login</a></button>

                        }
                        @*<li> <a class="nav-link active" style="color: white; " aria-current="page" href="~/Historia">Criar Historia</a></li>*@
                    </ul>
            </div>

        </nav>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <div class="text-light p-4 text-center" style="bottom: 0;width: 100%; background-color: #002060;color: #fff;" id="footer">


    <div class="container p-1">
        <h5>Desenvolvimento:</h5>
        <small>SENAI - CETAF-EST</small>
    </div>
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
   
</body>
</html>
